<main>
    <section class="content__lista__table">
        <% if(contatos.length > 0) { %>
        <table>
            <% contatos.forEach(contato => { %>
                <tr>
                    <td><%= contato.nome %></td>
                    <td><%= contato.sobrenome %></td>
                    <td><%= contato.telefone %></td>
                    <td><%= contato.email %></td>
                    <td><a href="/contato/index/<%= contato._id %>">Editar</a></td>
                    <td><a href="/contato/delete/<%= contato._id %>">Excluir</a></td>
                 </tr>
            <%}); %>
        </table>
        <% } else { %>
            <p>Não há contatos para exibir</p>
        <% } %>
     </section>
</main>